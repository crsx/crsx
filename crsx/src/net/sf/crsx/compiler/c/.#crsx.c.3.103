// Determines if the specified 8-bit character is an ISO control character. A character is considered to be an ISO
// control character if its code is in the range '\u0000' through '\u001F' or in the range '\u007F' through '\u009F'.
// 
// Parameters:
//     ch - the character to be tested. 
// Returns:
//     true if the character is an ISO control character; false otherwise.
int isISOControl(char c)
{
    return (c > 0x00 && c <= 0x1F) || (c >= 0x7F && c <= 0x9F);
}

// Print literal so it is reparseable.
// Literals are in double quotes.
void fprintLiteral(Context context, FILE* out, const char* literal)
{
    FPRINTF(context, out, "\"");
    int i;
    char c;
    for (i = 0; (c = literal[i]); ++i)
    {
        if ((isgraph(c) || c == ' ') && c != '"')
            FPRINTF(context, out, "%c", c);
        else
            FPRINTF(context, out, "\\%03o", (int)c);
    }
    FPRINTF(context, out, "\"");
}

// Print variable in form that can be safely reparsed.
void fprintVariable(Context context, FILE* out, Variable x)
{
    if (!x || !x->name || !x->name[0])
    {
        FPRINTF(context, out, "_");
        return;
    }
	char* name = x->name;
    int rawsafe = 1;
    unsigned char c = name[0];
    if (islower(c))
    {
        int i;
        for (i = 1; (c = name[i]); ++i)
        {
            switch (c)
            {
            case '_': case '-': case '$':
                break;
            default:
                if (!isalnum(c))
                    rawsafe = 0;
            }
        }
    }
    else
    {
        rawsafe = 0;
    }
    //
    if (rawsafe)
        FPRINTF(context, out, "%s%s", name, (IS_LINEAR(x) ? "\302\271" : ""));
    else
    {
        FPRINTF(context, out, "v'");
        int i;
        for (i = 0; (c = name[i]); ++i)
        {
            if ((isgraph(c) || c == ' ') && c != '\'')
                FPRINTF(context, out, "%c", c);
            else
                FPRINTF(context, out, "\\%03o", (int)c);
        }
        FPRINTF(context, out, "%s'", (IS_LINEAR(x) ? "\302\271" : ""));
    }
}

// Print constructor in form that can be safely reparsed.
// Constructors use single quotes unless safe to dump directly.
void fprintConstructor(Context context, FILE* out, char* name)
{
    if (!name || !name[0])
    {
        FPRINTF(context, out, "''");
        return;
    }
    int rawsafe = 1;
    unsigned char c = name[0];
    if (isupper(c))
    {
        int i;
        for (i = 1; (c = name[i]); ++i)
        {
            switch (c)
            {
            case '_': case '-': case '$':
                break;
            default:
                if (!isalnum(c))
                    rawsafe = 0;
            }
        }
    }
    else if (isdigit(c))
    {
        int i;
        for (i = 1; (c = name[i]); ++i)
        {
            switch (c)
            {
            case '0': case '1': case '2': case '3': case '4':
            case '5': case '6': case '7': case '8': case '9':
            case '.': case 'E': case 'e':
                break;
            default:
                rawsafe = 0;
            }
        }
    }
    else
    {
        rawsafe = 0;
    }
    //
    if (rawsafe)
        FPRINTF(context, out, "%s", name);
    else
    {
        FPRINTF(context, out, "'");
        int i;
        for (i = 0; (c = name[i]); ++i)
        {
            if ((isgraph(c) || c == ' ') && c != '\'')
                FPRINTF(context, out, "%c", c);
            else
                FPRINTF(context, out, "\\%03o", (int)c);
        }
        FPRINTF(context, out, "'");
    }
}

void fprintTermTop(Context context, FILE* out, Term term, int depth, VariableSet encountered, int indent, int indentFirst, int includeprops, int debug)
{
    if (indentFirst && indent && depth > 1) {
        FPRINTF(context, out, "%.*s", indent, SPACES);
    }
    if(term != 0 && term->descriptor != 0){
        char* nm = term->descriptor->name(term);
        if(nm != 0){
            if(strcmp(nm, "GlobalConstant") == 0){
                depth = -1;
            }
        }
    }
    if (term == NULL)
    {
        FPRINTF(context, out, "_");
    }
    else if (depth == 0)
    {
        FPRINTF(context, out, "...");
    }
    else if (IS_VARIABLE_USE(term))
    {
        Variable x = VARIABLE(term);
        fprintVariable(context, out, x);
    }
    else
    {
        char* nm = term->descriptor->name(term);
    	if (!strncmp("$Text", nm, 5))
    	{
    		// We have a text node!
    		char *kind = nm+5;
    		if (!strcmp(kind, "Cons"))
    		{
                fprintTermTop(context, out, SUB(term, 0), depth, encountered, indent, indentFirst, includeprops, debug);
                fprintTermTop(context, out, SUB(term, 1), depth, encountered, indent, indentFirst, includeprops, debug);
    			return;
    		}
    		else if (!strcmp(kind, "Nil"))
    		{
    			return;
    		}
    		else if (!strcmp(kind, "Chars"))
    		{
    			Term chars = SUB(term, 0);
    			if (IS_LITERAL(chars))
    				FPRINTF(context, out, "%s", asLiteral(chars)->text);
    			else
    			{
    				// TODO: fall-back to +embedded text.
    			}
    			return;
    		}
    		else if (!strcmp(kind, "Break"))
    		{
    			Term chars = SUB(term, 0);
    			if (IS_LITERAL(chars))
    			{
    				FPRINTF(context, out, "%s", asLiteral(chars)->text);
    				// TODO: reset absolute position
    			}
    			else
    			{
    				// TODO: fall-back to embedded text.
    			}
    			return;
    		}
    		else if (!strcmp(kind, "String"))
    		{
    			Term chars = SUB(term, 0);
    			if (IS_LITERAL(chars))
    			{
    				FPRINTF(context, out, "\"%s\"", asLiteral(chars)->text);
    				// TODO: reset absolute position
    			}
    			else
    			{
    				// TODO: fall-back to embedded text.
    			}
    			return;
    		}
    		else if (!strcmp(kind, "Separator"))
    		{
    			return;
    		}
    		else if (!strcmp(kind, "Group"))
    		{
                fprintTermTop(context, out, SUB(term, 0), depth, encountered, indent, indentFirst, includeprops, debug);
    			return;
    		}
    		else if (!strcmp(kind, "Indent"))
    		{
                fprintTermTop(context, out, SUB(term, 0), depth, encountered, indent+2, indentFirst, includeprops, debug);
    			return;
    		}
    		else if (!strcmp(kind, "Embed"))
    		{
                fprintTermTop(context, out, SUB(term, 0), depth, encountered, indent, indentFirst, includeprops, debug);
    			return;
    		}
    	}

        // Properties, if any.
        if (includeprops)
        {
            Construction construction = asConstruction(term);
            if (debug)
            {
#ifdef WEAKENINGS
                // If debugging then print weakenings.
                VariableSetLink link;
                for (link = construction->weakenings; link; link = link->link)
                    FPRINTF(context, out, "<%s%s>", link->variable->name, (link->variable->bound ? "" : "!"));
#endif
#ifdef FREEVARS
                fprintFreeVars(context, out, construction->fvs);
                fprintFreeVars(context, out, construction->nfvs);
                fprintFreeVars(context, out, construction->vfvs);
#endif

            }
            if (construction->namedProperties || construction->variableProperties)
            {
                FPRINTF(context, out, "{\n");
                char *sep = "";
                sep = fprintNamedProperties(context, out, construction->namedProperties, sep, depth-10, encountered, indent, debug, includeprops);
                sep = fprintVariableProperties(context, out, construction->variableProperties, sep, depth-10, encountered, indent, debug, includeprops);
                if (indent && depth > 1) FPRINTF(context, out, "\n%.*s", indent, SPACES);
                FPRINTF(context, out, "}");
            }
        }

        if (IS_LITERAL(term))
        {
            fprintLiteral(context, out, term->descriptor->name(term));
        }
        else
        {
            char* nm = term->descriptor->name(term);
            const int arity = ARITY(term);
            int isFunction = IS_FUNCTION(term);
            if (isFunction)
            {
                // Probably a cookie
                NamedPropertyLink newCookie = ALLOCATE(context, sizeof(struct _NamedPropertyLink));

                if (arity == 0)
                    newCookie->name = nm;
                else
                {
                   char* cons = ALLOCATE(context, 500);
                   newCookie->name = cons;

                   int sz = strlen(nm);
                   memcpy(cons, nm, sz);
                   cons += sz;
                   (*cons) = '[';
                   cons ++;
                   char* sub = SYMBOL(SUB(term, 0));
                   sz = strlen(sub);
                   memcpy(cons, sub, sz);
                   cons += sz;
                   (*cons) = '\0';
                }
                newCookie->link = printCookieNameList;
                printCookieNameList = newCookie;
            }

            if(arity == 0 && strlen(nm) == 0)
            {
                return;
            }
            fprintConstructor(context, out, nm);
#ifdef DEBUG
            DEBUGENV("crsx-debug-addresses", FPRINTF(context, out, "{%p}", (void*)term));
///            if (asConstruction(term)->constant)
///                FPRINTF(context, out, "{C}");
///            if (asConstruction(term)->ground)
///                FPRINTF(context, out, "{G}");
            if (debug)
            {
            	if (asConstruction(term)->nf)
            		FPRINTF(context, out, "{NF}");
            	if (asConstruction(term)->nostep)
            		FPRINTF(context, out, "{NS}");

            	FPRINTF(context, out, "{%d}", term->nr);
            }
#endif
            if(arity > 0)
            {
                FPRINTF(context, out, (indent && depth>1 ? "[\n" : "["));
                int i;
                for (i = 0; i < arity; ++i)
                {
                    if (i > 0) FPRINTF(context, out, (indent && depth>1 ? ",\n" : ", "));
                    // Binders.
                    int rank = RANK(term,i);
                    if (rank > 0)
                    {
                        if (indent && depth > 1) FPRINTF(context, out, "%.*s ", indent, SPACES);
                        int j;
                        for (j = 0; j < rank; ++j)
                        {
                            // Bound variable that should be unique...
                            Variable binder = BINDER(term, i, j);
                            if (binder)
                            {
                                //ASSERT(context, !containsVariable(encountered, binder));
                                addVariable(encountered, binder);
                                fprintVariable(context, out, binder);
                                FPRINTF(context, out, " ");
                            }
                            else
                                FPRINTF(context, out, "vNULL ");
                        }
                        FPRINTF(context, out, (indent && depth>1 ? ".\n" : ". "));
                    }
                    // Subterm.
                    fprintTermTop(context, out, SUB(term, i), depth-1, encountered, (indent ? indent+(rank>0 ? 2 : 1) : 0), 1, includeprops, debug);
                }
                FPRINTF(context, out, "]");
            }
        }
    }
}

/** Print named properties (and return sep on empty, "; " otherwise). */
char* fprintNamedProperties(Context context, FILE* out, NamedPropertyLink namedProperties, char* sep, int depth, VariableSet encountered, int indent, int debug, int max)
{
	NamedPropertyLink link;
    for (link = namedProperties; link; link = link->link)
    {
        if (link->name)
        {
        	FPRINTF(context, out, "%s", sep);
            if (indent && depth > 2) FPRINTF(context, out, "%.*s", indent+1, SPACES);
            if (debug)
            	FPRINTF(context, out, "{%d}", link->nr);

            fprintLiteral(context, out, link->name);
            FPRINTF(context, out, " : ");
            fprintTermTop(context, out, link->u.term, depth-2, encountered, (indent ? indent+2 : 0), 1, 1, debug);
            sep = ";\n";
        }
        else if (debug)
        {
#ifdef WEAKENINGS
            FPRINTF(context, out, "%s<%s%s>", sep, link->u.weakening->name, (link->u.weakening->bound ? "" : "!"));
            sep = ";\n";
#endif
#ifdef FREEVARS
            FPRINTF(context, out, "%s", sep);
			fprintFreeVars(context, out, (VARIABLESET) link->u.weakening);
			sep = ";\n";
#endif
        }
        if (max-- <=0)
        	break;
    }
    return sep;
}

/** Print variable properties (and return sep on empty, "; " otherwise). */
char* fprintVariableProperties(Context context, FILE* out, VariablePropertyLink variableProperties, char* sep, int depth, VariableSet encountered, int indent, int debug, int max)
{
    VariablePropertyLink link;
    for (link = variableProperties; link; link = link->link)
    {
        if (link->variable)
        {
        	FPRINTF(context, out, "%s", sep);
            if (indent && depth > 2) FPRINTF(context, out, "%.*s", indent+1, SPACES);
            if (debug)
           		FPRINTF(context, out, "{%d}", link->nr);
            fprintVariable(context, out, link->variable);
            FPRINTF(context, out, " : ");
            fprintTermTop(context, out, link->u.term, depth-2, encountered, (indent ? indent+2 : 0), 1, 1, debug);
            sep = ";\n";
        }
        else if (debug)
        {
#ifdef WEAKENINGS
            FPRINTF(context, out, "%s<%s%s>", sep, link->u.weakening->name, (link->u.weakening->bound ? "" : "!"));
            sep = ";\n";
#endif
#ifdef FREEVARS
            FPRINTF(context, out, "%s", sep);
            fprintFreeVars(context, out, (VARIABLESET) link->u.weakening);
            sep = ";\n";
#endif
        }

        if (max-- <=0)
           	break;
    }
    return sep;
}

